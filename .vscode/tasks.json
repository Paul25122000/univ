{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile c file",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceRoot}//${fileBasename}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run c file",
            "type": "shell",
            "command": "./${fileBasename}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Compile c file"
            ]
        },
        {
            "label": "Create custom object",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-c",
                "Predefined/definitions.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Create main object",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-c",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Create custom object"
            ]
        },
        {
            "label": "Create executable",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "${fileDirname}/executable",
                "main.o",
                "definitions.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Create main object"
            ]
        },
        {
            "label": "Execute customs",
            "type": "shell",
            "command": "${fileDirname}/executable",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Create executable"
            ]
        }
    ]
}