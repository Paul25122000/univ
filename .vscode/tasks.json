{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C file",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceRoot}\\${fileBasename}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },{
            "label": "Run C file",
            "type": "shell",
            "command": ".\\${fileBasename}.exe",
            "group": "test"
        },
    ]
}